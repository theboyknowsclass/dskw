{
  "extends": "expo/tsconfig.base",
  "esModuleInterop": true,
  "compilerOptions": {
    "strict": true,
    "baseUrl" : "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@navigation/*": ["./navigation/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["../assets/*"],
      "@stores/*": ["./stores/*"]
    }
  },
}
