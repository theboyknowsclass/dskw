{
  "extends": "expo/tsconfig.base",
  "esModuleInterop": true,
  "compilerOptions": {
    "strict": true,
    "baseUrl" : "./src",
    "paths": {
      "@templates": ["./components/templates/index.ts"],
      "@organisms": ["./components/organisms/index.ts"],
      "@molecules": ["./components/molecules/index.ts"],
      "@atoms": ["./components/atoms/index.ts"],
      "@pages": ["./components/pages/index.ts"],
      "@pages/*": ["./components/pages/*"],
      "@components/*": ["./components/*"],
      "@services": ["./services/index.ts"],
      "@services/*": ["./services/*"],
      "@hooks": ["./hooks/index.ts"],
      "@hooks/*": ["./hooks/*"],
      "@utils": ["./utils/index.ts"],
      "@utils/*": ["./utils/*"],
      "@types": ["./types/index.ts"],
      "@types/*": ["./types/*"],
      "@assets/*": ["../assets/*"],
      "@stores": ["./stores/index.ts"],
      "@stores/*": ["./stores/*"],
      "@contexts": ["./contexts/index.ts"],
      "@contexts/*": ["./contexts/*"]
    }
  },
}
